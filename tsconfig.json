{
  "compilerOptions": {
    "baseUrl": "src",
    "inlineSourceMap": true,
    "inlineSources": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "module": "amd",
    "target": "es6",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": false,
    "importHelpers": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "typeRoots": [
      "./node_modules/@craftdocs/craft-extension-api"
    ]
  },
  "paths": {
    "assets/*": ["assets/*"]
  },
  "exclude": ["node_modules"]
}
